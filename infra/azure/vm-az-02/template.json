{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachines_vm_az_02_name": {
            "defaultValue": "vm-az-02",
            "type": "String"
        },
        "disks_vm_az_02_disk1_ead8c7b8b53443a585f59a5a972321dd_externalid": {
            "defaultValue": "/subscriptions/16418c0d-f671-4e1f-8df8-8eb43b7eca2f/resourceGroups/vm-az-02_group/providers/Microsoft.Compute/disks/vm-az-02_disk1_ead8c7b8b53443a585f59a5a972321dd",
            "type": "String"
        },
        "networkInterfaces_vm_az_02791_z3_externalid": {
            "defaultValue": "/subscriptions/16418c0d-f671-4e1f-8df8-8eb43b7eca2f/resourceGroups/vm-az-02_group/providers/Microsoft.Network/networkInterfaces/vm-az-02791_z3",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2024-07-01",
            "name": "[parameters('virtualMachines_vm_az_02_name')]",
            "location": "northeurope",
            "zones": [
                "3"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B1s"
                },
                "additionalCapabilities": {
                    "hibernationEnabled": false
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "canonical",
                        "offer": "ubuntu-24_04-lts",
                        "sku": "server",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[concat(parameters('virtualMachines_vm_az_02_name'), '_disk1_ead8c7b8b53443a585f59a5a972321dd')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "StandardSSD_LRS",
                            "id": "[parameters('disks_vm_az_02_disk1_ead8c7b8b53443a585f59a5a972321dd_externalid')]"
                        },
                        "deleteOption": "Delete",
                        "diskSizeGB": 30
                    },
                    "dataDisks": [],
                    "diskControllerType": "SCSI"
                },
                "osProfile": {
                    "computerName": "[parameters('virtualMachines_vm_az_02_name')]",
                    "adminUsername": "sebastian",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "/home/sebastian/.ssh/authorized_keys",
                                    "keyData": "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIKFyxQM8PzDrLf9W5ByKL/9k3K/AznQsS+Z4NcXYwfcl"
                                }
                            ]
                        },
                        "provisionVMAgent": true,
                        "patchSettings": {
                            "patchMode": "ImageDefault",
                            "assessmentMode": "ImageDefault"
                        }
                    },
                    "secrets": [],
                    "allowExtensionOperations": true,
                    "requireGuestProvisionSignal": true
                },
                "securityProfile": {
                    "uefiSettings": {
                        "secureBootEnabled": true,
                        "vTpmEnabled": true
                    },
                    "securityType": "TrustedLaunch"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('networkInterfaces_vm_az_02791_z3_externalid')]",
                            "properties": {
                                "deleteOption": "Detach"
                            }
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            }
        }
    ]
}
